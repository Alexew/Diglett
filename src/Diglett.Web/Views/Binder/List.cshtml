@using Diglett.Web.Models.Collection

@model BinderListModel

@{
    ViewData["Title"] = "Binders";

    var hasBinders = Model.Binders != null && Model.Binders.Any();
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="fs-4">
        <i class="bi bi-journal-bookmark"></i>
        <span>@ViewData["Title"]</span>
    </div>
    <div>
        <a href="#" class="btn btn-primary open-modal" data-url="@Url.Action("CreateBinderModal")">
            <i class="bi bi-plus-circle"></i>
            <span>Create</span>
        </a>
    </div>
</div>

<div dt-if="!hasBinders">
    <h2>No binders found</h2>
</div>
<div dt-if="hasBinders" class="row">
    @foreach (var binder in Model.Binders!)
    {
        <div class="col-4 mb-3">
            <div class="card">
                <svg class="bd-placeholder-img card-img-top" width="100%" height="180"
                     xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder"
                     preserveAspectRatio="xMidYMid slice" focusable="false">
                    <rect width="100%" height="100%" fill="#868e96"></rect>
                    <text x="50%" y="50%" fill="#dee2e6" dy=".3em" text-anchor="middle">Image</text>
                </svg>
                <div class="card-body">
                    <h5 class="card-title">
                        @binder.Name
                    </h5>
                    <a href="@Url.Action("Edit", new { id = binder.Id })" class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-secondary open-modal" data-url="@Url.Action("EditBinderModal", new { id = binder.Id})">Settings</a>
                    <a href="#" class="btn btn-danger open-modal" data-url="@Url.Action("DeleteBinderModal", new { id = binder.Id })">Delete</a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScripts" />
    <script src="~/js/modals.js"></script>
}
