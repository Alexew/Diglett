@using Diglett.Web.Models.Collection

@model BinderModel

<form asp-action="Delete" asp-controller="Binder" method="post">
    <div class="modal-header">
        <h5 class="modal-title" id="deleteBinderModalLabel">Confirm delete - @Model.Name</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        Are you sure you want to delete this binder?
        <input asp-for="Id" type="hidden" />
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
</form>
