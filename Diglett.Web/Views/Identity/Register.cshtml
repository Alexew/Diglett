@using Diglett.Web.Models.Identity

@model RegisterModel

<form asp-action="Register" method="post">
    <div class="page-title">
        <h3>Create a new account</h3>
    </div>
    <div class="row">
        <div class="col-12 col-lg-9 col-xl-6">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="mb-3">
                <label asp-for="Username" class="form-label required"></label>
                <input asp-for="Username" class="form-control" aria-required="true" required />
                <div class="form-text">Your unique username. It will be visible to other users.</div>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label required"></label>
                <input asp-for="Email" class="form-control" aria-required="true" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label required"></label>
                <input asp-for="Password" class="form-control" aria-required="true" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label required"></label>
                <input asp-for="ConfirmPassword" class="form-control" aria-required="true" required/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>